        "font": {
            "name": "noto_sans",
            "size": 24,
            "style": "regular",
            "antialiased": "1"
        },
        "colours": {
            "normal_text": "#FFFFFF",
            "hovered_text": "#FF00FF"
        },
        "misc": {
            "text_horiz_alignment": "center",
            "text_vert_alignment": "center"
        }
    },
    "@menu_button": {
        "font": {
            "name": "noto_sans",
            "size": 24,
            "style": "bold",
            "antialiased": "1"
        },
        "colours": {
            "normal_text": "#FFFFFF",
