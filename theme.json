{
    "defaults": {
        "font": {
            "name": "noto_sans",
            "regular_path": "/fonts/NotoSans-Regular.ttf",
            "bold_path": "/fonts/NotoSans-Bold.ttf",
            "antialiased": "1"  
        }
    },
    "@title_label": {
        "font": {
            "name": "noto_sans",
            "size": "52",
            "style": "bold",  
            "antialiased": "1"
        },
        "colours": {
            "normal_text": "#00FFFF",
            "normal_text_shadow": "#006666",
            "hovered_text": "#00FFFF"
        },
        "misc": {
            "text_horiz_alignment": "center",
            "text_vert_alignment": "center",
            "text_shadow_size": "3",
            "text_shadow_offset": "2,2"
        }
    },
    "@rules_title": {
        "font": {
            "name": "noto_sans",
            "size": "36",
            "style": "bold",
            "antialiased": "1"
        },
        "colours": {
            "normal_text": "#00E5FF",
            "normal_text_shadow": "#005766"
        },
        "misc": {
            "text_horiz_alignment": "center",
            "text_vert_alignment": "center",
            "text_shadow_size": "2",
            "text_shadow_offset": "2,2",
            "padding": "0,0,40,40"
        }
    },
    "@winner_label": {
        "font": {
            "name": "noto_sans",
